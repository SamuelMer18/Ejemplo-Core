@model IEnumerable<Ejemplo1Core.Models.Reserva>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-6">
        <h3>Lista de Reservas</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Crear" asp-controller="Reserva">Agregar</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Id)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Fecha)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.EstudianteId)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.LibroId)
            </td>
            <td>
                Acciones
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstudianteId)
                </td>          
                <td>
                    @Html.DisplayFor(modelItem => item.LibroId)
                </td>               
                <td>
                    <a class="btn btn-warning d-block" asp-action="Editar" asp-route-id="@item.Id" asp-controller="Reserva">Editar</a>
                    <a class="btn btn-danger d-block" asp-action="Eliminar" asp-route-id="@item.Id" asp-controller="Reserva">Eliminar</a>

                </td>

            </tr>
        }
    </tbody>
</table>

