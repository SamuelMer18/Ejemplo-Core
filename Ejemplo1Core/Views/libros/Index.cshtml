@model IEnumerable<Ejemplo1Core.Models.libro>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div class="row">
    <div class="col-sm-6">
        <h3>Lista de Libros</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Crear" asp-controller="libros">Agregar</a>
    </div>  
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Id)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Nombre)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Descripcion)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Fecha)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Precio)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Autor)
            </td>
            <td>
                Acciones
            </td>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    <a class="btn btn-warning d-block" asp-action="Editar" asp-route-id="@item.Id" asp-controller="libros">Editar</a>
                    <a class="btn btn-danger d-block" asp-action="Eliminar" asp-route-id="@item.Id" asp-controller="libros">Eliminar</a>

                </td>
              
        </tr>
        }
    </tbody>
</table>
